{
  "name": "setup-deno",
  "version": "1.1.0",
  "private": true,
  "description": "setup deno action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "release": "ncc build src/setup-deno.ts && git add -f dist/",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denolib/setup-deno.git"
  },
  "keywords": [
    "actions",
    "deno",
    "setup"
  ],
  "author": "The Deno Authors",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/io": "^1.0.1",
    "@actions/exec": "^1.0.1",
    "@actions/tool-cache": "^1.1.2",
    "semver": "^6.3.0",
    "typed-rest-client": "1.5.0",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.5",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.12",
    "@types/semver": "^6.2.0",
    "@types/uuid": "^3.4.6",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format"
    }
  }
}
